   "source": [
    "def build_summary(name, sales):\n",
    "    total = sum(sales)\n",
    "    avg = total / len(sales)\n",
    "    return {\n",
    "        \"name\": name,\n",
    "        \"total\": total,\n",
    "        \"average\": round(avg, 2)\n",
    "    }\n",
    "\n",
    "# Try it\n",
    "summary = build_summary(\"Morgan\", [320, 280, 300])\n",
    "print(summary)\n"
   ]
